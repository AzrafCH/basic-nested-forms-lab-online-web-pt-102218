<%= form_for @recipe  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %><br>

    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br>

    <%= ing.label :ingredient_type %>
    <%= ing.text_field :ingredient_type %><br>

  <% end %>

  <%= f.submit %>
<% end %>
